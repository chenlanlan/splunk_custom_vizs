<form script="autodiscover.js">
  <label>Punchcard</label>
  <row>
    <panel>
      <html>
        <h2>Options</h2>
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td><b>Name</b></td>
              <td><b>Type</b></td>
              <td><b>Default</b></td>
              <td><b>Description</b></td>
            </tr>
            <tr>
              <td><code>managerid</code></td>
              <td>string</td>
              <td>null</td>
              <td>The search manager bound to the chart.</td>
            </tr>
            <tr>
              <td><code>height</code></td>
              <td>string</td>
              <td>null</td>
              <td>The height of the chart</td>
            </tr>
            <tr>
              <td><code>width</code></td>
              <td>string</td>
              <td>null</td>
              <td>The width of the chart.</td>
            </tr>
            <tr>
              <td><code>formatXAxisLabel</code></td>
              <td>function</td>
              <td>_.identity</td>
              <td>A custom formatting function for x-axis value names.</td>	
            </tr>
            <tr>
              <td><code>formatYAxisLabel</code></td>
              <td>function</td>
              <td>truncates label</td>
              <td>A custom formatting function for y-axis value names.</td>	
            </tr>
            <tr>
              <td><code>formatCount</code></td>
              <td>function</td>
              <td>rounds to thousands</td>
              <td>A custom formatting function for count numbers.</td>	
            </tr>
          </tbody>
        </table>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <html>
        <h2>IDS Events in a week</h2>
        <div id="punchcard_search" class="splunk-manager" data-require="splunkjs/mvc/searchmanager" data-options='{
          "search": "tag=ids | stats count by date_wday sourcetype",
          "preview": true,
          "earliest_time": "-7d@d",
          "latest_time": "now"
        }'>
        </div>
        <div id="punchcard" class="splunk-view" data-require="app/dos_viz/punchcard/punchcard" data-options='{
          "managerid": "punchcard_search",
          "height": "250px"
        }'>
        </div>
      </html>
    </panel>
  </row>
</form>